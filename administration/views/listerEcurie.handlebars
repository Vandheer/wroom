<div class="centermydiv">
    <img src="image/cat_ecurie.png" alt="une voiture de course">
    <h1>Gestion des Ecuries</h1>
    <div class="spacer">
        <a href="/ajouterEcurie">
          <img src="image/act_add.png" alt="ajouter" title="Ajouter"/>
          Ajouter une Ã©curie
        </a>
    </div>
  <table class="tablestyle">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Directeur</th>
        <th>Points</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody name="table-start">
      {{#if listeEcuries}}
      {{#each listeEcuries}}
      <tr>
        <td>{{this.ecunom}}</td>
        <td>{{this.ecunomdir}}</td>
        {{#if this.ecupoints}}
            <td>{{this.ecupoints}}</td>
        {{else}}
            <td>0</td>
        {{/if}}
        <td>
          <a href="/modifierEcurie/{{this.ecunum}}" class="modifier">
            <img src="image/act_edit.png" alt="modifier" title="Modifier"/>
            Modifier
          </a>
          <a href="/ecuries/supprimer/{{this.ecunum}}" class="supprimer">
            <img src="image/act_delete.png" alt="supprimer" title="Supprimer"/>
            Supprimer
          </a>
        </td>
      </tr>
      {{/each}}
      {{/if}}
  </tbody>
  </table>
</div>
<br class="myboth" />
